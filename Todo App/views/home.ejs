<!DOCTYPE html>
<html lang="en">
<link>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css"
  integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
  
  <link rel="stylesheet" href="/css/home.css"></link>

  <title>Todo App</title>
</head>
<body>
  <header><h1>Plan your day</h1></header>

  <div class="wrapper" id="wrapper">

  <form action="/create-task" method="POST" class = "create">
   
    <div class="close">
      <button type="button" id="close">
        <i class="fas fa-window-close"></i>
      </button>
    </div>

    <label for="categories">Select a category</label>
    <select name="categories" required id="categories">
      <option value="personal">Personal</option>
      <option value="work">Work</option>
      <option value="college">College</option>
      <option value="cleaning">Cleaning</option>
      <option value="others">Others</option>
    </select>
    
    <label for="description">Description</label>
    <input type="text"  required name="description" id="description">

    <label for="date">Deadline</label>
    <input type="date" required name="date">
  
    <div>
      <button type="submit" id="submit">Submit</button>
    </div>
  </form>

</div>

<div class="open">
  <button type="button" id="open">
    Add a task
  </button>
</div>

<div class="task-container">

  <form action="/delete-tasks" method="POST" class="task-container">
    <button type="submit" id="dlt-btn">Delete Tasks</button>
    <div class="margin"></div>
    <% for(let i of tasks){ %>
      <div class="task">
        <input type="checkbox" name="task" value="<%= i.id %>">
        
        <p>
          <b> Category: </b> &nbsp<%= i.categories %>
        </p>

        <p>
         <b>Task:  </b>&nbsp; <%= i.description %>
        </p>
       
        <p>
          <b> Deadline:  </b>&nbsp;<%= i.deadline %>
        </p>
      </div>
      <% } %>
 
  </form>
</div>

<!-- Linking javascript files -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="/js/home.js"></script>
</body>
</html>